@model Calculator.ViewModels.CalculatorVM

@{
    ViewData["Title"] = "Index";
    var totalMessage = "";
    if (Model != null) // Model (met hoofdletter) is eigenlijk -> Calculator.ViewModels.CalculatorVM
    {
        int total = 0;

        total = Model.Getal1 + Model.Getal2;

        totalMessage = "The result is: " + total;
    }
}

<h1>Index</h1>

<h4>CalculatorVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Getal1" class="control-label"></label>
                <input asp-for="Getal1" class="form-control" />
                <span asp-validation-for="Getal1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Getal2" class="control-label"></label>
                <input asp-for="Getal2" class="form-control" />
                <span asp-validation-for="Getal2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<p>@totalMessage</p>

<div>
    <a asp-action="Index">Back to List</a>
</div>

