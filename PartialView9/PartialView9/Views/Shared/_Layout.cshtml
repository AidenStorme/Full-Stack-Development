<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PartialView9</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PartialView9.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false) <!-- als je een blokje "styles" tegenkomt plaats je dat hier -->
</head>
<body>
    @await Html.PartialAsync("_Header") <!-- Hier maak je de verwijzing naar je partial view die je hebt gemaakt nml _Header -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    @await Html.PartialAsync("_Footer") <!-- Hier maak je de verwijzing naar je partial view die je hebt gemaakt nml _Footer -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
